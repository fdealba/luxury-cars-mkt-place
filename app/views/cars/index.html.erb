<h1>All Cars</h1>

<% @cars.each do |car| %>
<h1><%= link_to car.brand, car_path(car) %></h1>
<p>Plate number -<%= car.plate_number %></p>
<p>Milage  -<%= car.milage %></p>
<p>Price per hour -<%= car.price_per_hour %></p>
<% end %>
<%= link_to "Add a car", new_car_path, class: "btn btn-primary btn-lg" %>


<% @cars.each do |car| %>
   <tr>
      <td><%= car.brand %></td>
      <td><%= car.plate_number %></td>
      <td><%= link_to 'Destroy', car_path(car), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>

