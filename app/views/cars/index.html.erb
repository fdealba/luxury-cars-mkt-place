<div class="cards">
<% @cars.each do |car| %>
  <div class="card rounded">
    <img class="card-img-top rounded pho" width="100%" height="70%" style="background-image: url('<%= car.photo %>')">
  <div class="card-body" >
  <h5 class="m-0"><%= link_to car.car_model, car_path(car) %></h5>
  <% unless car.reviews.length == 0 %>
    <% counter = 0 %>
    <% car.reviews.each do |review| %>
    <% counter += review.rating.to_i %>
    <% end %>
      <p class="card-text m-0"><% counter/car.reviews.length.times do  %>
        <i class="fas fa-star"></i>
      <% end %>(<%= car.reviews.count %>)</p>
    <% end %>
  </div>
  <div class="box p-2">
  <h4><%= car.price_per_hour%>â‚¬</h4>
  <span>PER HOUR</span>
  </div>
  </div>

<% end %>
</div>
<%= link_to "Add a car", new_car_path, class: "btn btn-primary btn-lg" %>


