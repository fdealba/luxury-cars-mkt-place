<div class="container text-center mt-5 main-cnt">
    <img src='<%= @car.photo %>' class="car-image mt-3 mb-3" alt="">
  <h1><%= @car.brand.upcase %> <%= @car.year %></h1>
  <%= simple_form_for [@car, @booking] do |f| %>
  <div class="reservations m-3">
    <h5 class="reservation mr-1">Reservation start: <strong><%= @start_time %></strong></h5>
    <h5 class="reservation ml-1">Reservation end: <strong><%= @end_time %></strong></h5>
  </div>
  <h3 class="price">TOTAL: <strong><%= @result %>â‚¬</strong></h3>
  <%= hidden_field_tag 'renting_time', @result / @car.price_per_hour %>
  <%= f.submit "Book", class: "custom-button w-50 mt-4 mb-3", data: { confirm: "Are you sure?" }%>
  <% end %>
</div>
